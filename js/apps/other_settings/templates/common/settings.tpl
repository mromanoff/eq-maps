<div class="settings-table">

    <% if (user.FacebookId !== null) { %>
        <div class="row">
            <div class="col-1-2">
                <h3>Facebook Share</h3>
                <p class="is-tablet is-desktop">Lets your friends see the classes on your calendar. Classes are posted on the Equinox website and mobile app -- not on Facebook.</p>
            </div>
            <div class="col-1-2">
                <p><a class="toggle toggle-fb-share"><i>ON</i><b>/OFF</b></a></p>
                <p class="is-mobile">Lets your friends see the classes on your calendar. Classes are posted on the Equinox website and mobile app -- not on Facebook.</p>
            </div>
        </div>
    <% } %>

    <div class="row">
        <div class="col-1-2">
            <h3>Session Confirmations</h3>
            <p class="is-tablet is-desktop">Receive an email confirmation when your trainer creates, reschedules or cancels training sessions.</p>
        </div>
        <div class="col-1-2">
            <p><a class="toggle toggle-email-confirmations"><i>ON</i><b>/OFF</b></a></p>
            <p class="is-mobile">Receive an email confirmation when your trainer creates, reschedules or cancels training sessions.</p>
        </div>
    </div>

</div>